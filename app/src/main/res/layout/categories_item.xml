<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llcategories"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:id="@+id/rlcategories"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/border_corner_categories"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/makanan"
                android:layout_margin="10dp"
                android:background="@drawable/border_corner_categories" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llkegiatain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvkegiatan"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Pizza delivery" />

            <TextView
                android:id="@+id/tvwaktu"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="start"
                android:text="15:00 - April 24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvuang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-$18,35"
            android:gravity="center_vertical|end"
            android:layout_gravity="end"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:paddingEnd="16dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>